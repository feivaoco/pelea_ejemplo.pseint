Algoritmo pelea_ejemplo
	Definir vida_jug, jug, ene1, ataq_ene1, n_pocs, poc, golpe Como Entero;
	n_pocs = 5;
	poc = 5;
	ene1 = aleatorio(20,60);
	vida_jug = 100;
	Escribir 'Te encontraste con una calaca, pelea';
	Escribir "";
	Repetir
		ataq_ene1 = aleatorio (0,4);
		golpe = aleatorio (1,5);
		Escribir "1.- Golpe";
		Escribir "2.- Inventario";
		Escribir "";
		Leer jug;
		Segun jug
			1:
				Escribir "El enemigo recibi� ", golpe, " de da�o";
				ene1 = ene1 - golpe;
				Escribir "El enemigo ahora tiene ", ene1, " de vida";
				Escribir "";
			2:
				Escribir "Tienes ", n_pocs, " pociones, �quieres curarte?';
				Escribir "1.- S�";
				Escribir "2.- No";
				leer jug;
				Si jug = 1
					si n_pocs > 0
						vida_jug = vida_jug + poc;
						n_pocs = n_pocs - 1;
						Escribir "Ahora tienes ", vida_jug, " de vida";
						Escribir "";
					SiNo
						Escribir "Ya no tienes pociones";
						Escribir "";
					FinSi
				FinSi
		FinSegun
		Escribir "El enemigo atac�, recibiste ", ataq_ene1, " de da�o';
		vida_jug = vida_jug - ataq_ene1;
		Escribir "Ahora tienes ", vida_jug, " de vida";
		Escribir "";
	Hasta Que ene1 <= 0 o vida_jug <= 0
	Si ene1 <= 0
		Escribir "Derrotaste a la calaca";
	FinSi
	Si vida_jug <= 0 
		Escribir "Perdiste, reinicia el juego";
	FinSi
FinAlgoritmo
